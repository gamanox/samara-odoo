<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_parish_chapel_mass_time_tree" model="ir.ui.view">
    <field name="name">parish.chapel.mass_time.tree</field>
    <field name="model">parish.chapel.mass_time</field>
    <field name="arch" type="xml">
      <tree string="Horarios de misa" default_order="chapel_id,name">
        <field name="chapel_id"/>
        <field name="name"/>
        <field name="hour" widget="float_time"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_parish_chapel_mass_time_form" model="ir.ui.view">
    <field name="name">parish.chapel.mass_time.form</field>
    <field name="model">parish.chapel.mass_time</field>
    <field name="arch" type="xml">
      <form string="Horario de misa">
        <sheet>
          <group>
            <group>
              <field name="chapel_id" required="1"/>
              <field name="name" required="1"/>
            </group>
            <group>
              <field name="hour" widget="float_time"/>
              <field name="active"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_parish_chapel_mass_time" model="ir.actions.act_window">
    <field name="name">Horarios de misa</field>
    <field name="res_model">parish.chapel.mass_time</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_parish_chapel_mass_time_search"/>
    <field name="context">{'default_active': True}</field>
  </record>

</odoo>
